issn = {1662-5188},
journal = {Frontiers in Computational Neuroscience},
keywords = {Echo-state networks,Homeostasis,Recurrent networks,Spectral radius,reservoir computing,synaptic scaling},
month = {feb},
pages = {12},
publisher = {Frontiers},
title = {{Local Homeostatic Regulation of the Spectral Radius of Echo-State Networks}},
url = {www.frontiersin.org},
